# =============================================================================
# AEGIS TRADING COACH - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# For Vercel: Use Vercel Postgres or external provider like Railway/Supabase
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# =============================================================================
# NEXTAUTH.JS AUTHENTICATION
# =============================================================================
# Secret key for JWT encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Base URL of your application
# Development: http://localhost:3000
# Production: https://your-domain.vercel.app
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# OAUTH PROVIDERS (Optional - for social login)
# =============================================================================
# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (get from GitHub Developer Settings)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# =============================================================================
# STRIPE PAYMENT PROCESSING
# =============================================================================
# Stripe Secret Key (starts with sk_test_ for test mode, sk_live_ for production)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"

# Stripe Publishable Key (starts with pk_test_ for test mode, pk_live_ for production)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"

# Stripe Webhook Secret (for handling Stripe events securely)
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# =============================================================================
# STRIPE SUBSCRIPTION PRICE IDs
# =============================================================================
# Create these products/prices in your Stripe Dashboard
# Starter Plan (e.g., €29/month)
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID="price_starter_monthly_id"

# Professional Plan (e.g., €79/month)
NEXT_PUBLIC_STRIPE_PROFESSIONAL_PRICE_ID="price_professional_monthly_id"

# Enterprise Plan (e.g., €199/month)
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID="price_enterprise_monthly_id"

# =============================================================================
# EMAIL CONFIGURATION (Optional - for transactional emails)
# =============================================================================
# SMTP settings for sending emails (use services like SendGrid, Mailgun, etc.)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@your-domain.com"

# =============================================================================
# EXTERNAL APIs (Optional)
# =============================================================================
# Finnhub API for market data (get free key from finnhub.io)
FINNHUB_API_KEY="your-finnhub-api-key"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment mode
NODE_ENV="development"

# App URL (used for webhooks and redirects)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT="true"